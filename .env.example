# FieldRino Environment Configuration
# Copy this file to .env and update with your values

# =============================================================================
# Django Settings
# =============================================================================
DEBUG=False
SECRET_KEY=your-super-secret-key-change-this-in-production-use-at-least-50-characters
ALLOWED_HOSTS=.fieldrino.com,fieldrino.com

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL=postgresql://fieldrino_user:fieldrino_password@localhost:5432/fieldrino_db

# =============================================================================
# CORS Configuration (for multi-tenant subdomains)
# =============================================================================
# Comma-separated list of allowed origins (your frontend apps)
CORS_ALLOWED_ORIGINS=https://app.fieldrino.com,https://admin.fieldrino.com

# Your production domain (used for tenant subdomain regex matching)
CORS_ALLOWED_DOMAIN=fieldrino.com

# =============================================================================
# JWT Configuration
# =============================================================================
JWT_ACCESS_TOKEN_LIFETIME=15  # minutes
JWT_REFRESH_TOKEN_LIFETIME=7  # days

# =============================================================================
# Email Configuration
# =============================================================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=noreply@fieldrino.com

# =============================================================================
# Redis/Celery Configuration
# =============================================================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Stripe Configuration
# =============================================================================
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# =============================================================================
# Development Settings (Optional - for local development)
# =============================================================================
# Uncomment these for local development
# DEBUG=True
# ALLOWED_HOSTS=*
# EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# STRIPE_SECRET_KEY=sk_test_your_test_key
# STRIPE_PUBLISHABLE_KEY=pk_test_your_test_key
